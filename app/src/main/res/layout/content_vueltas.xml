<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".vueltas">

    <Button
            android:text="-"
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:id="@+id/quitarVuelta" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="48dp"
            android:textSize="36sp" android:textColor="@color/White" android:background="@color/colorPrimary"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.159"/>
    <Button
            android:text="+"
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:id="@+id/agregarVuelta" app:layout_constraintStart_toEndOf="@+id/quitarVuelta"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="48dp" app:layout_constraintHorizontal_bias="0.943" android:textSize="36sp"
            android:textColor="@color/White" android:background="@color/colorPrimary" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.157"/>
    <Button
            android:text="Agregar"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/agregarVueltas" android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="244dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/regresarInicio"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Inicio"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/regresarInicio" android:background="@color/colorPrimary"
            android:textColor="@color/White" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="344dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/valores_"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/regresarInicio"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <ListView
            android:layout_width="379dp"
            android:layout_height="246dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:id="@+id/listaVueltas"
            app:layout_constraintHorizontal_bias="0.4"/>
    <TextView
            android:text="0"
            android:layout_width="101dp"
            android:layout_height="59dp"
            android:id="@+id/contadorVueltas" android:textAlignment="center"
            android:textSize="36sp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.051"/>
</android.support.constraint.ConstraintLayout>